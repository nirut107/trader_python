
generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}


model Trade {
  id        Int      @id @default(autoincrement())
  time      DateTime
  signal    String   // BUY, TAKE_PROFIT, STOP_LOSS, etc
  price     Float
  pnl       Float?   // null for BUY
  regime    String   // UPTREND, SIDEWAYS, DOWNTREND
  note      String?
  createdAt DateTime @default(now())

  @@index([time])
  @@index([signal])
  @@index([regime])
}
